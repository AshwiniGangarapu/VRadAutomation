<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Suite" configfailurepolicy="continue">

<!-- this is used to listen to the test cases, it will create a connection between test cases and listner class.-->
<!-- it is used to report and take screen shots.in our frame we are only using to take screen shots-->
    <listeners>
		<listener class-name="com.listeners.ListenerTest"></listener>
		<listener class-name="com.listeners.AnnotationTransformer"></listener> 
	</listeners>
		
	<test name="Test">
	<!--test name="Test" parallel = "classes" thread-count = "2" -->
	
		<parameter name="browser" value="chrome" />
		<parameter name="URL" value="http://vrad-client.eastus.azurecontainer.io/"/>
		
		<classes>
				
		 <class name="com.tests.TSLogin">
		 
		   <methods>
		   
		      <include name="SignIn"/>
		
		      <exclude name="InvalidSignIn"/>
	  
	       </methods>
	       
		 </class>
		 	  	 
		</classes>
	</test>
</suite>