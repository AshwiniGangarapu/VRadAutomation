<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Suite" configfailurepolicy="continue" parallel="none">

<!-- this is used to listen to the test cases, it will create a connection between test cases and listner class.-->
<!-- it is used to report and take screen shots.in our frame we are only using to take screen shots-->
    <listeners>
		<listener class-name="com.listeners.ListenerTest"></listener>
		<listener class-name="com.listeners.AnnotationTransformer"></listener> 
	</listeners>
		
	
	<!--test name="Test" parallel = "classes" thread-count = "3" -->
	<test name="Test">
	
	<parameter name="browser" value="chrome" />
    <parameter name="URL" value="http://vrad-client.eastus.azurecontainer.io/"/>
	
	<groups>
	<run>
	<include name="smoke"/>
	</run>
	</groups>
			
		<classes>
					 
		 <class name="com.tests.TSNavigationPanel" /> 
		 <class name="com.tests.TSDashboard" />	
		 <class name="com.tests.TSNewDispatch" />
		 <class name="com.tests.TSManageTemplates" />	
		 <class name="com.tests.TSManageUsers" />
	 	 <class name="com.tests.TSManageRecipients" />
		  
			  	 
		</classes>
	</test>
</suite>